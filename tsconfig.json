{
  "include": [
    "src/**/*",
    "tsconfig.json"
  ],
  "exclude": [
    "node_modules"
  ],
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "incremental": true,
    "composite": true,
    "baseUrl": "src",
    "outDir": "./dist",
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}